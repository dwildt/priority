{
  "name": "priority-matrix",
  "version": "1.0.0",
  "description": "Personal task organization system using the Eisenhower Matrix with multi-language support",
  "homepage": "https://dwildt.github.io/priority/",
  "repository": {
    "type": "git",
    "url": "https://github.com/dwildt/priority.git"
  },
  "bugs": {
    "url": "https://github.com/dwildt/priority/issues"
  },
  "main": "src/js/app.js",
  "scripts": {
    "start": "http-server -p 8080",
    "test": "jest tests/unit/simple-task.test.js",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "cypress:open": "cypress open",
    "cypress:run": "cypress run",
    "lint": "eslint src/ tests/",
    "lint:fix": "eslint src/ tests/ --fix",
    "build": "npm run lint && npm run test",
    "dev": "npm run start"
  },
  "keywords": [
    "eisenhower-matrix",
    "task-management",
    "productivity",
    "priority",
    "javascript",
    "multilingual"
  ],
  "author": "dwildt",
  "license": "MIT",
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "cypress": "^13.6.0",
    "eslint": "^8.56.0",
    "http-server": "^14.1.1",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/**/*.test.js"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ],
    "setupFilesAfterEnv": ["<rootDir>/tests/setup.js"]
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es2021": true,
      "node": true,
      "jest": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
    },
    "rules": {
      "indent": [
        "error",
        2
      ],
      "linebreak-style": [
        "error",
        "unix"
      ],
      "quotes": [
        "error",
        "single"
      ],
      "semi": [
        "error",
        "always"
      ]
    }
  }
}
